        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:cacheColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listarcomidapedida">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totaldinero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/colorrojolatra"
                android:fontFamily="sans-serif"
                android:paddingStart="45dp"
                android:text="@string/total"
                android:textAlignment="textStart"
                android:textColor="@color/colorrojolatra"
                android:textColorHint="@color/colorrojolatra"
